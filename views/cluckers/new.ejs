<div class="container">
<h1>New clucker</h1>

  <form action="/cluckers" method="POST">
    <div class="form-group">
    </div>
<div class="form-group">
      <input 
          type="url" 
          class="form-control" 
          name="imageUrl" 
          placeholder="e.g. http://yourimageUrl.com" />
      </div>

      <div class="form-group">
          <textarea 
              name="content" 
              class="form-control" 
              placeholder="Enter the content of your clucker">
          </textarea>
      </div>

      <input type="submit" class="btn btn-outline-success" value="Submit" />
  </form>
</div>
